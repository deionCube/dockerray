{
  "log": {
    "loglevel": "error",
    "dnsLog": true,
    "access": "/usr/share/caddy/$AUUID/log/ray-access.log",
    "error": "/usr/share/caddy/$AUUID/log/ray-error.log"
  },
  "inbounds": [
    {
      "listen": "/etc/caddy/vmess",
      "protocol": "vmess",
      "settings": {
        "clients": [
          {
            "id": "$AUUID"
          }
        ]
      },
      "streamSettings": {
        "network": "ws",
        "wsSettings": {
          "path": "/$AUUID-vmess"
        }
      },
      "sniffing": {
        "enabled": true,
        "destOverride": ["http", "tls"]
      }
    },
    {
      "listen": "/etc/caddy/vless",
      "protocol": "vless",
      "settings": {
        "clients": [
          {
            "id": "$AUUID"
          }
        ],
        "decryption": "none"
      },
      "streamSettings": {
        "network": "ws",
        "wsSettings": {
          "path": "/$AUUID-vless"
        }
      },
      "sniffing": {
        "enabled": true,
        "destOverride": ["http", "tls"]
      }
    },
    {
      "listen": "/etc/caddy/trojan",
      "protocol": "trojan",
      "settings": {
        "clients": [
          {
            "password": "$AUUID"
          }
        ]
      },
      "streamSettings": {
        "network": "ws",
        "wsSettings": {
          "path": "/$AUUID-trojan"
        }
      },
      "sniffing": {
        "enabled": true,
        "destOverride": ["http", "tls"]
      }
    }
  ],
  "outbounds": [
    {
      "protocol": "freedom",
      "tag": "direct",
      "settings": {}
    }
  ],
  "dns": {
    "servers": [
      {
        "address": "127.0.0.1",
        "port": 5353
      },
      "localhost"
    ],
    "queryStrategy": "UseIPv4"
  },
  "routing": {
    "domainStrategy": "IPOnDemand",
    "domainMatcher": "mph",
    "rules": [
      {
        "type": "field",
        "ip": [
          "8.8.8.8"
        ],
        "outboundTag": "direct"
      }
    ]
  }
}